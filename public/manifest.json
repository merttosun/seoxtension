{
  "name": "seoxtension",
  "description": "A chrome extension to see your page's most important seo elements and metrics!",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "js/eventPage.js"
  },
  "permissions": [
    "tabs",
    "background",
    "storage",
    "activeTab",
    "scripting",
    "webNavigation",
    "webRequest",
    "history"
  ],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "seo-16.png"
    },
    "icons": {
      "16": "seo-16.png"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["js/content.js"],
      "matches": ["*://*/*"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["https://*/*"],
      "all_frames": true,
      "js": ["js/content.js"],
      "permissions": "storage"
    }
  ],
  "options_page": "options.html"
}
