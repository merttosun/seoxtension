{
  "compilerOptions": {
    "strict": true,
    "baseUrl": "src",
    "module": "ESNext",
    "target": "es6",
    "esModuleInterop": true,
    "sourceMap": false,
    "rootDir": "/",
    "outDir": "dist/js",
    "noEmitOnError": true,
    "jsx": "react",
    "typeRoots": ["node_modules/@types"],
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["./dist", "node_modules"]
}
