{
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "target": "es6",
    "esModuleInterop": true,
    "sourceMap": false,
    "rootDir": "src",
    "outDir": "dist/js",
    "noEmitOnError": true,
    "jsx": "react",
    "typeRoots": [ "node_modules/@types" ],
    "paths": {
      "@crawler/*": ["./src/crawler/*"],
      "@test/*": ["./src/test/*"],
}
},
"exclude": [
  "./dist",
  "**/src/test/**"
]
}